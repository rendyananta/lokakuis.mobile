<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.lokakuis.ui.home.feed.FeedFragment"
        android:label="FeedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_sectionFragment"
            app:destination="@id/sectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.lokakuis.ui.home.profile.ProfileFragment"
        android:label="ProfileFragment" >
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.lokakuis.ui.quiz.QuizFragment"
        android:label="QuizFragment">
        <argument android:name="topic"
            app:argType="com.example.lokakuis.entity.response.topic.Topic" />
        <argument android:name="section"
            app:argType="com.example.lokakuis.entity.response.section.Section" />
        <action
            android:id="@+id/action_quizFragment_to_quizDetailFragment"
            app:destination="@id/quizDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/sectionFragment"
        android:name="com.example.lokakuis.ui.section.SectionFragment"
        android:label="SectionFragment">
        <argument android:name="topic"
            app:argType="com.example.lokakuis.entity.response.topic.Topic" />
        <action
            android:id="@+id/action_sectionFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizDetailFragment"
        android:name="com.example.lokakuis.ui.quiz.detail.QuizDetailFragment"
        android:label="QuizDetailFragment">
        <argument android:name="topic"
            app:argType="com.example.lokakuis.entity.response.topic.Topic" />
        <argument android:name="section"
            app:argType="com.example.lokakuis.entity.response.section.Section" />
        <argument android:name="quiz"
            app:argType="com.example.lokakuis.entity.response.quiz.Quiz" />
    </fragment>
</navigation>